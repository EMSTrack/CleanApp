<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.emstrack.ambulance.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_map"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="org.emstrack.ambulance.fragments.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" >
        <argument
            android:name="latLng"
            app:argType="com.google.android.gms.maps.model.LatLng"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_map_to_hospitals"
            app:destination="@id/hospitalsFragment" />
        <action
            android:id="@+id/action_map_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/hospitalsFragment"
        android:name="org.emstrack.ambulance.fragments.HospitalFragment"
        android:label="Hospitals"
        tools:layout="@layout/fragment_hospital" >
        <action
            android:id="@+id/action_hospitals_to_ambulances"
            app:destination="@id/ambulancesFragment" />
        <action
            android:id="@+id/action_hospitals_to_equipment"
            app:destination="@id/equipmentFragment" />
        <action
            android:id="@+id/action_hospitals_to_map"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/ambulanceFragment"
        android:name="org.emstrack.ambulance.fragments.AmbulanceFragment"
        android:label="Vehicle"
        tools:layout="@layout/fragment_ambulance" >
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_ambulance_to_equipment"
            app:destination="@id/equipmentFragment" />
        <action
            android:id="@+id/action_ambulance_to_map"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_ambulance_to_messages"
            app:destination="@id/messagesFragment" />
        <action
            android:id="@+id/action_ambulance_to_call"
            app:destination="@id/callFragment" />
    </fragment>

    <fragment
        android:id="@+id/equipmentFragment"
        android:name="org.emstrack.ambulance.fragments.EquipmentFragment"
        android:label="Equipment"
        tools:layout="@layout/fragment_equipment">
        <argument
            android:name="type"
            app:argType=".models.EquipmentType"
            android:defaultValue="AMBULANCE" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="org.emstrack.ambulance.fragments.SettingsFragment"
        android:label="@string/settings" />

    <fragment
        android:id="@+id/ambulancesFragment"
        android:name="org.emstrack.ambulance.fragments.AmbulancesFragment"
        android:label="@string/ambulances"
        tools:layout="@layout/fragment_ambulances" >
        <action
            android:id="@+id/action_ambulances_to_ambulance"
            app:destination="@id/ambulanceFragment" />
        <action
            android:id="@+id/action_ambulances_to_equipment"
            app:destination="@id/equipmentFragment" />
        <action
            android:id="@+id/action_ambulances_to_map"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_ambulances_to_messages"
            app:destination="@id/messagesFragment" />
    </fragment>

    <fragment
        android:id="@+id/messagesFragment"
        android:name="org.emstrack.ambulance.fragments.MessagesFragment"
        android:label="@string/messages"
        tools:layout="@layout/fragment_messages">
        <argument
            android:name="type"
            app:argType=".models.MessageType"
            android:defaultValue="CALL" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <fragment
        android:id="@+id/callFragment"
        android:name="org.emstrack.ambulance.fragments.CallFragment"
        android:label="CallFragment" >
        <action
            android:id="@+id/action_call_to_messages"
            app:destination="@id/messagesFragment" />
        <action
            android:id="@+id/action_call_to_map"
            app:destination="@id/mapFragment" />
    </fragment>

</navigation>