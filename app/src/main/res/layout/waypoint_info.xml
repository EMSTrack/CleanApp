<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/waypointAddressLine0"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:text="Line 0"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/callNextWaypointLocationButton"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        app:srcCompat="@drawable/ic_location_arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:tint="@color/iconColorDark"
        android:contentDescription="@string/linkToMap" />

    <ImageView
        android:id="@+id/callNextWaypointToMapsButton"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        app:srcCompat="@drawable/ic_map"
        android:layout_toStartOf="@id/callNextWaypointLocationButton"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/link_to_google_maps" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/waypointAddressLine0"
        android:layout_marginTop="2pt"
        android:padding="2pt"
        android:id="@+id/waypointInfoLayout">

        <TextView
            android:id="@+id/waypointAddressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waypointAddressLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waypointAddressLine1"
            android:text="University City, CA 92121, US"/>


        <TextView
            android:id="@+id/waypointDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waypointAddressLine2"
            android:textStyle="bold"
            android:text="Distance:"/>

        <TextView
            android:id="@+id/waypointDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waypointAddressLine2"
            android:layout_toEndOf="@id/waypointDistanceLabel"
            android:paddingStart="5dp"
            android:text="1.984 km" />

    </RelativeLayout>

</RelativeLayout>