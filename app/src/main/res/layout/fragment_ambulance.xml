<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_ambulance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    tools:context="org.emstrack.ambulance.fragments.AmbulanceFragment">

    <LinearLayout
        android:id="@+id/ambulanceLabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ambulanceThumbnail"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            app:srcCompat="@drawable/ic_car_solid" />

        <TextView
            android:id="@+id/ambulanceLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@string/ambulanceButtonDefaultText" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ambulanceLabelLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/ambulance_detail"
                android:id="@+id/ambulanceDetail"
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/infoThumbnail"
                    android:layout_height="@dimen/ambulanceToolbarIconHeight"
                    android:layout_width="@dimen/ambulanceToolbarIconWidth"
                    app:srcCompat="@drawable/ic_info_circle_solid" />

                <TextView
                    android:id="@+id/statusLabel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/StatusLabel"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/statusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="@string/available" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callThumbnail"
                    android:layout_height="@dimen/ambulanceToolbarIconHeight"
                    android:layout_width="@dimen/ambulanceToolbarIconWidth"
                    app:srcCompat="@drawable/ic_phone_solid" />

                <TextView
                    android:id="@+id/callLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/callLabel"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/callInformationText"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAlignment="gravity"
                    android:text="No calls"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ambulanceCallRecyclerView"
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>


