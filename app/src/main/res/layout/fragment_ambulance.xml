<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:windowBackground"
    android:id="@+id/equipment_fragment"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:paddingHorizontal="5dp"
    android:orientation="vertical"
    tools:context="org.emstrack.ambulance.fragments.AmbulanceFragment">

    <TextView
        android:id="@+id/ambulanceSelectionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/noAmbulanceMessage">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ambulanceFragmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ambulanceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ambulanceButtonDefaultText"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/statusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available" />

            <RelativeLayout
                android:id="@+id/callInformationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/callLabel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/callLabel"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/callInformationText"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/callLabel"/>

                <LinearLayout
                    android:id="@+id/callResumeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_below="@+id/callLabel">

                    <Spinner
                        android:id="@+id/callResumeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/callResumeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/bootstrapPrimary"
                        android:text="@string/resumeCalls" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/callLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <include layout="@layout/call_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <include layout="@layout/ambulance_detail"
                android:id="@+id/ambulanceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>


