<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:windowBackground"
    android:id="@+id/activity_gps"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.emstrack.ambulance.fragments.AmbulanceFragment">

    <TextView
        android:id="@+id/identifierLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsIdentifierLabel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/headerText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/unknown"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/identifierLabel"/>

    <TextView
        android:id="@+id/statusLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsStatusLabel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/headerText"/>

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/headerText"
        android:layout_toRightOf="@+id/statusLabel"/>

    <TextView
        android:id="@+id/locationLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsLocationLabel"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/statusLabel"/>

    <TextView
        android:id="@+id/latitudeLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsLatitudeLabel"
        android:layout_below="@+id/locationLabel"/>

    <TextView
        android:id="@+id/latitudeText"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/unknown"
        android:gravity="right"
        android:layout_below="@+id/locationLabel"
        android:layout_toRightOf="@+id/latitudeLabel"/>

    <TextView
        android:id="@+id/longitudeLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsLongitudeLabel"
        android:layout_below="@+id/latitudeLabel"/>

    <TextView
        android:id="@+id/longitudeText"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/unknown"
        android:gravity="right"
        android:layout_toRightOf="@+id/longitudeLabel"
        android:layout_below="@+id/latitudeText"/>

    <TextView
        android:id="@+id/orientationLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsOrientationLabel"
        android:layout_below="@+id/longitudeLabel"/>

    <LinearLayout
        android:id="@+id/orientationLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitudeText"
        android:layout_toEndOf="@+id/orientationLabel"
        android:layout_toRightOf="@+id/orientationLabel"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orientationText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="left"
            android:text="@string/unknown"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/orientationUnitsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/degrees" />

    </LinearLayout>

    <TextView
        android:id="@+id/timestampLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsTimestampLabel"
        android:layout_below="@+id/orientationLabel"/>

    <TextView
        android:id="@+id/timestampText"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/unknown"
        android:gravity="right"
        android:layout_toRightOf="@+id/timestampLabel"
        android:layout_below="@+id/orientationLayout"/>

    <TextView
        android:id="@+id/capabilityLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsCapabilityLabel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/timestampText"/>

    <TextView
        android:id="@+id/capabilityText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/unknown"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/timestampText"/>

    <TextView
        android:id="@+id/commentLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsCommentsLabel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/capabilityText"/>

    <TextView
        android:id="@+id/commentText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/unknown"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/commentLabel"/>

    <TextView
        android:id="@+id/updatedOnLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gpsLastUpdatedOnLabel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/commentText"/>

    <TextView
        android:id="@+id/updatedOnText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/unknown"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/updatedOnLabel"/>

</RelativeLayout>


