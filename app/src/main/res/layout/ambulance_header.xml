<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ambulanceThumbnail"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        app:srcCompat="@drawable/ic_car_solid"
        android:contentDescription="@string/vehicle_header" />

    <TextView
        android:id="@+id/ambulanceIdentifierText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text=""
        android:gravity="center_vertical"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/ambulanceStatusText"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:text=""
        android:gravity="center_vertical"
        android:layout_marginTop="5dp" />

</LinearLayout>