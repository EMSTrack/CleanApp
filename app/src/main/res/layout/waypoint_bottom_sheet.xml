<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottomsheet"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/callWaypoints"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/callWaypointsIcon"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            app:srcCompat="@drawable/ic_map_marker"
            app:tint="@color/iconColorDark" />

        <TextView
            android:id="@+id/callNumberOfWaypointsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/callWaypointsIcon"
            android:layout_marginStart="5dp"
            android:text="@string/numberOfWaypoints"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/callNumberOfWaypointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/callNumberOfWaypointsLabel"
            android:text="0" />

        <ImageView
            android:id="@+id/bottomSheetUndoIcon"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            android:layout_toStartOf="@id/bottomSheetAddIcon"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/ic_undo_solid" />

        <ImageView
            android:id="@+id/bottomSheetCurrentIcon"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            android:layout_toStartOf="@id/bottomSheetUndoIcon"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/ic_step_forward_solid" />

        <ImageView
            android:id="@+id/bottomSheetAddIcon"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            app:srcCompat="@drawable/ic_plus_square_solid" />

        <ImageView
            android:id="@+id/waypointMaximize"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_window_maximize_regular" />

        <ImageView
            android:id="@+id/waypointMinimize"
            android:layout_height="@dimen/ambulanceToolbarIconHeight"
            android:layout_width="@dimen/ambulanceToolbarIconWidth"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_window_minimize_solid" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/waypointBrowserRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>

