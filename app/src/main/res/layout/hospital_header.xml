<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hospital_thumbnail"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        app:srcCompat="@drawable/hospital_symbol" />

    <TextView
        android:id="@+id/hospitalNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="Hospital" />

</LinearLayout>