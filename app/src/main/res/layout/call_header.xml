<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/callSuspendedThumbnail"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        app:srcCompat="@drawable/ic_phone_slash_solid"
        android:contentDescription="@string/call_header" />

    <ImageView
        android:id="@+id/callRequestedThumbnail"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        android:padding="3dp"
        app:srcCompat="@drawable/ic_phone_solid"
        android:contentDescription="@string/call_header"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/callCurrentThumbnail"
        android:layout_height="@dimen/ambulanceToolbarIconHeight"
        android:layout_width="@dimen/ambulanceToolbarIconWidth"
        app:srcCompat="@drawable/ic_phone_square_solid"
        android:contentDescription="@string/call_header"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="@string/priorityLabel"
        android:gravity="center_vertical" />

    <include layout="@layout/call_priority"
        android:layout_marginStart="5dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/callUpdatedOn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="updated on"
        android:gravity="end|center_vertical"
        android:layout_weight="1"/>

</LinearLayout>