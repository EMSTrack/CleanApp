<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/call_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/callSkipLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/callSkipWaypointButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/bootstrapSecondary"
            android:text="@string/skip"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/callVisitingWaypointButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/bootstrapPrimary"
            android:text="@string/markAsVisiting"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/callEndLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/callAddWaypointButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/bootstrapSuccess"
            android:text="@string/addWaypoint"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/callEndButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="@string/endCall"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


    <TextView
        android:id="@+id/callNotesLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/callNotesLabel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/capabilityText"/>

    <TextView
        android:id="@+id/callNotesText"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:background="@drawable/textview_border"
        android:text="@string/noCallNotesAvailable"
        android:scrollbars = "vertical"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/callNotesLabel"/>

    <Button
        android:id="@+id/addCallNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/bootstrapSuccess"
        android:text="@string/addCallNote"
        android:textColor="@color/colorWhite" />
</LinearLayout>