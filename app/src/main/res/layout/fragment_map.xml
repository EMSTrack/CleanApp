<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/showLocationButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@color/mapButtonOff"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_location_arrow" />

        <ImageView
            android:id="@+id/showAmbulancesButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="12dp"
            android:layout_marginTop="60dp"
            android:background="@color/mapButtonOff"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_ambulance" />

        <ImageView
            android:id="@+id/showHospitalsButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="12dp"
            android:layout_marginTop="100dp"
            android:background="@color/mapButtonOff"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_hospital" />

        <ImageView
            android:id="@+id/showWaypointsButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="12dp"
            android:layout_marginTop="140dp"
            android:background="@color/mapButtonOff"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_map_marker" />

    </RelativeLayout>

    <include layout="@layout/waypoint_navigator"
        android:id="@+id/mapWaypointNavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>