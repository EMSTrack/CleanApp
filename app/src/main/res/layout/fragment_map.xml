<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mapFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_plus_solid"
        app:maxImageSize="30dp"
        android:visibility="gone"
        android:layout_margin="16dp" />

    <LinearLayout
        android:id="@+id/mapToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#99ffffff"
        android:gravity="center_vertical|end"
        android:visibility="visible">

        <ImageView
            android:id="@+id/showLocationButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            app:tint="@color/iconColorDark"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_car_solid" />

        <ImageView
            android:id="@+id/showAmbulancesButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            app:tint="@color/iconColorDark"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_cars_solid" />

        <ImageView
            android:id="@+id/showHospitalsButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            app:tint="@color/iconColorDark"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_hospital" />

        <ImageView
            android:id="@+id/showWaypointsButton"
            android:layout_width="40dp"
            android:layout_height="36dp"
            app:tint="@color/iconColorDark"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_map_marker" />

        <ImageView
            android:id="@+id/mapToolbarClose"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:paddingBottom="20dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_times_circle_solid" />

    </LinearLayout>

</RelativeLayout>
